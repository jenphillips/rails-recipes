<%= form_for(@recipe) do |f| %>
  <% if @recipe.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@recipe.errors.count, "error") %> prohibited this recipe from being saved:</h2>

      <ul>
      <% @recipe.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="form-group">
  Ingredients:
  <ul>
    <%= f.fields_for :ingredients do |ingredients_form| %>
      <li>
        <%= ingredients_form.label :amount %>
        <%= ingredients_form.number_field :amount %>

        <%= ingredients_form.label :unit %>
        <%= ingredients_form.text_field :unit %>

        <%= ingredients_form.label :name %>
        <%= ingredients_form.text_field :name %>

        <%= ingredients_form.check_box :_destroy %>
      </li>
    <% end %>
  </ul>
  </div>

  <div class="form-group">
    <%= f.label :instructions %>
    <%= f.text_area :instructions %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>

<%= javascript_include_tag 'add_ingredient_fields.js' %>
