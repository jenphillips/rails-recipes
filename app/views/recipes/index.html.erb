<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<div id="search">
  <%= form_tag("/search", method: "get") do %>
    <%= label_tag(:q, "Search for:") %>
    <%= text_field_tag(:q) %>

    <%= label_tag(:tag, "Filter by tag:") %>
    <%= collection_select(:tag, :ids, Tag.all(), :id, :name, { include_blank: "Select tag..." } ) %>
    <%= submit_tag("Search") %>
  <% end %>
</div>
<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td><%= recipe.name %></td>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
<br />
<%= link_to 'Show tags', tags_path %>
