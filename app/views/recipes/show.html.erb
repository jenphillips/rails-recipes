<p id="notice"><%= notice %></p>

<%= @recipe.name %>

<% @recipe.steps.each do |step| %>
  <% step.ingredients.each do |i| %>
    <%= i.amount %>
    <%= i.unit %>
    <%= i.name %>
  <% end %>
  <%= step.description %>
<% end %>

<%= link_to 'Edit', edit_recipe_path(@recipe) %> |
